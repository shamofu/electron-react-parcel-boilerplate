{
  "name": "electron-react-parcel-boilerplate",
  "version": "0.10.2",
  "description": "A boilerplate for Electron + React + Parcel.",
  "author": "shamofu",
  "license": "MIT",
  "private": true,
  "main": "dist/backend/main.js",
  "targets": {
    "frontend": {
      "source": "app/renderer/index.html",
      "context": "browser",
      "publicUrl": "./"
    },
    "backend": {
      "source": "app/main/main.ts",
      "context": "electron-main"
    }
  },
  "scripts": {
    "dev": "run-s build serve",
    "lint": "eslint \"app/**/*.{js,jsx,ts,tsx}\"",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "parcel build",
    "release": "electron-builder --x64 --publish=never",
    "clean": "rimraf dist",
    "serve": "run-p f:serve e:start -r",
    "f:serve": "parcel serve --target frontend --port 1124",
    "e:start": "electron ."
  },
  "build": {
    "productName": "ElectronReactParcel",
    "appId": "org.shamofu.ElectronReactParcel",
    "files": [
      "dist"
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-mac.${ext}"
    },
    "win": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-win.${ext}"
    },
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Development",
      "artifactName": "${productName}-linux.${ext}"
    },
    "directories": {
      "output": "release"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@jest/globals": "^27.3.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "asar": "^3.1.0",
    "cross-env": "^7.0.3",
    "electron": "^13.6.1",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-testing-library": "^4.12.4",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "spectron": "^15.0.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "electron-is-dev": "^2.0.0"
  },
  "packageManager": "yarn@3.0.2"
}
